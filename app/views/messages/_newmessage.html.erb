<div data-id="<%= message.user.id %>" class="chat-message chat-message-friend message-outer-wrap <%= message.user == current_user(message.group) ? 'chat-message-self' : '' %>" id="message-box-<%= message.user.id %>">
	<div class="chat-message-bubble">
		<span class="message-username message-box-<%= message.user.id %>">@<%= message.user.username %>:</span> <span class="message-content"><%= EncryptText.decrypt(message.body) %></span><br />
	</div>
</div>


<script>
  var my_user_id = <%= message.user.id %>
  newMessageClass(my_user_id)
</script>
